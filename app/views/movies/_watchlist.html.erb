<div class="container">
  <h2>My Watchlist</h2>
  <% if current_user.movies.empty? %>
    <h5>Looks like you haven't added any movies yet!</h5>
  <% end %>
  <div class="card-columns">
    <% current_user.movies.each do |mov| %>
      <div class="card text-center" style="max-width: 10rem;">
        <img class="card-img-top" src="<%= "https://image.tmdb.org/t/p/w300_and_h450_bestv2/#{mov.poster_path}" %>" alt="Card image cap">
        <div class="card-body">
          <p class="card-text"><%= mov.original_title %> </p>
        </div>
      </div>
    <% end %>
  </div>

  <br><br>
  <div>
    <%= link_to "Add Movies to Watch List", movies_path, class: "btn btn-primary" %>
    <br><br>
  </div>
</div>
