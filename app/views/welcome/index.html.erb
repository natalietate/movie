<div class="container">
  <h1>Movie Night</h1>
  <p>Create the ultimate movie night with your friends</p>

  <h2>Your Upcoming Group Events</h2>
  <div class="list-group">
    <div class='row'>
      <% @user.groups.upcoming.each do |group| %>
      <% if group.event_date >= Date.today %>
        <div class="col-sm">
          <a href="<%= group_path(group) %>" class="list-group-item list-group-item-action"><%= group.title %> on <%= local_date(group.event_date, '%B %e, %Y') %></a>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
<br>

<h2>Your Recent Group Events</h2>
<div class="list-group">
  <div class='row'>
    <% @user.groups.recent[0..5].each do |group| %>
    <% if group.event_date <= Date.today %>
      <div class="col-sm">
        <a href="<%= group_path(group) %>" class="list-group-item list-group-item-action"><%= group.title %> on <%= local_date(group.event_date, '%B %e, %Y') %></a>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<br>

<h1>All Groups</h1>
<% @groups.upcoming.each do |group| %>
<% if group.event_date >= Date.today %>
  <div class="col-sm">
    <a href="<%= group_path(group) %>" class="list-group-item list-group-item-action"><%= group.title %> on <%= local_date(group.event_date, '%B %e, %Y') %></a>
  </div>
  <% end %>
<% end %>


<br>
<%= link_to "Create a Group", new_group_path, class: "btn btn-primary" %>
<br><br>

  <h2>My Watchlist</h2>
  <div class="card-deck">
    <% @user.movies.each do |mov| %>
    <div class="card text-center" style="max-width: 10rem;">
      <img class="card-img-top" src="<%= "https://image.tmdb.org/t/p/w300_and_h450_bestv2/#{mov.poster_path}" %>" alt="Card image cap">
      <div class="card-body">
        <p class="card-text"><%= mov.original_title %> </p>
      </div>
    </div>
    <% end %>
  </div>
  </div>
<br><br>
