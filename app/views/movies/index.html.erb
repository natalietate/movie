<h1>Search for a movie:</h1>
<div class="form">
  <%= form_tag('/movies/0/search', method: 'get') do %>
  <%= text_field_tag(:q) %>
  <%= submit_tag 'Search', type: :submit %>
  <% end %>
</div>

<% @movies[0..2].each do |mov| %>
  <ul>
    <li><%= mov.original_title %> <br>
    <img src="<%= "https://image.tmdb.org/t/p/w300_and_h450_bestv2/#{mov.poster_path}" %>"/> <br>
    <div class="form">
    <%= form_with model: @movie, local: true do |f| %>
      <%= f.hidden_field :original_title, value: mov.original_title %>
      <%= f.hidden_field :poster_path, value: mov.poster_path %>
      <%= f.submit %>
      <% end %>
    </div>
  </li>
  </ul>
<% end %>
