<div class="container">
  <h1 class="display-4">View <%= @user.email %>'s Watch List</h1>

  <div class="row equal-height">
  <% @user.movies.each do |mov| %>
    <div class="col-sm-3">
      <div class="card bg-light text-center">
        <img class="card-img-top" src="<%= "https://image.tmdb.org/t/p/w300_and_h450_bestv2/#{mov.poster_path}" %>" alt="<%= mov.original_title %>">
        <div class="card-body">
          <p class="card-text"><%= mov.original_title %> </p>
        </div>
      </div>
      <br>
    </div>
  <% end %>
  </div>
</div>
